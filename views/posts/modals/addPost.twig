<!-- Modal update student-->
<div class="modal fade" id="addPost" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add post</h4>
                {% if responseMessage != '' %}
                <div class="alert alert-info" role="alert">
                    {{ responseMessage }}
                </div>
                {% endif %}
            </div>
            <div class="modal-body">
                <form class="form-horizontal" method="post" name="" id="" action="">
                    <div class="form-group">
                        <label for="lastname" class="col-sm-3 control-label">
                            <span class="form_required">*</span>
                            Title
                        </label>
                        <div class="col-sm-7">
                            <input size="40" class="form-control" name="title" type="text" id="title" required="">
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="firstname" class="col-sm-3 control-label" required="">
                            <span class="form_required">*</span>
                            Description
                        </label>
                        <div class="col-sm-7">
                            <textarea size="40" class="form-control" name="description" type="text" id="description" required cols="10" rows="12">
                            </textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="saveData" name="">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>